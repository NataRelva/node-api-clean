generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                   String    @id @unique @default(uuid())
  name                 String
  email                String    @unique
  password             String
  cpfCnpj              String    @unique
  phone                String
  accessToken          String    @unique @default("")
  role                 String    @default("user")
  passwordResetToken   String?   @unique
  passwordResetExpires DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

model Log {
  id        String   @id @unique @default(uuid())
  stack     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RmouraProduct {
  id        String           @id @unique @default(uuid())
  name      String
  weight    Float
  obs       String
  price     Float
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  category  RmouraCategory[] @relation("RmouraCategoryToRmouraProduct")
  package   RmouraPackage[]  @relation("RmouraPackageToRmouraProduct")
  unit      RmouraUnit[]     @relation("RmouraProductToRmouraUnit")

  @@map("rmoura_product")
}

model RmouraUnit {
  id        String          @id @unique @default(uuid())
  name      String          @unique
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  product   RmouraProduct[] @relation("RmouraProductToRmouraUnit")

  @@map("rmoura_unit")
}

model RmouraPackage {
  id        String          @id @unique @default(uuid())
  name      String          @unique
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  product   RmouraProduct[] @relation("RmouraPackageToRmouraProduct")

  @@map("rmoura_package")
}

model RmouraCategory {
  id        String          @id @unique @default(uuid())
  name      String          @unique
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  product   RmouraProduct[] @relation("RmouraCategoryToRmouraProduct")

  @@map("rmoura_category")
}

model CelmarProduct {
  id           String               @id @unique @default(uuid())
  code         String
  name         String
  price        Float
  mainCategory CelmarMainCategory[] @relation("CelmarMainCategoryToCelmarProduct")
  package      CelmarPackage[]      @relation("CelmarPackageToCelmarProduct")
  subCategory  CelmarSubCategory[]  @relation("CelmarProductToCelmarSubCategory")
}

model CelmarPackage {
  id      String          @id @unique @default(uuid())
  name    String          @unique
  product CelmarProduct[] @relation("CelmarPackageToCelmarProduct")
}

model CelmarMainCategory {
  id      String          @id @unique @default(uuid())
  name    String          @unique
  product CelmarProduct[] @relation("CelmarMainCategoryToCelmarProduct")
}

model CelmarSubCategory {
  id      String          @id @unique @default(uuid())
  name    String          @unique
  product CelmarProduct[] @relation("CelmarProductToCelmarSubCategory")
}
